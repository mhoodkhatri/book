{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Docusaurus Site Configuration",
  "description": "Schema for docusaurus.config.js settings specific to this textbook",
  "type": "object",
  "required": ["title", "url", "baseUrl", "themeConfig"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Site title",
      "const": "Physical AI & Humanoid Robotics"
    },
    "tagline": {
      "type": "string",
      "description": "Site tagline displayed on homepage"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "GitHub Pages URL"
    },
    "baseUrl": {
      "type": "string",
      "default": "/",
      "description": "Base URL path"
    },
    "organizationName": {
      "type": "string",
      "description": "GitHub organization or username"
    },
    "projectName": {
      "type": "string",
      "description": "GitHub repository name"
    },
    "trailingSlash": {
      "type": "boolean",
      "default": false
    },
    "i18n": {
      "type": "object",
      "properties": {
        "defaultLocale": {
          "type": "string",
          "const": "en"
        },
        "locales": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["en"]
        }
      }
    },
    "themeConfig": {
      "$ref": "#/definitions/ThemeConfig"
    },
    "plugins": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string" },
          { "type": "array" }
        ]
      }
    },
    "presets": {
      "type": "array"
    },
    "scripts": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "src": { "type": "string" },
              "defer": { "type": "boolean" },
              "data-domain": { "type": "string" }
            }
          }
        ]
      },
      "description": "External scripts (e.g., analytics)"
    }
  },
  "definitions": {
    "ThemeConfig": {
      "type": "object",
      "required": ["navbar", "colorMode"],
      "properties": {
        "colorMode": {
          "type": "object",
          "properties": {
            "defaultMode": {
              "type": "string",
              "enum": ["light", "dark"],
              "default": "light"
            },
            "disableSwitch": {
              "type": "boolean",
              "const": false
            },
            "respectPrefersColorScheme": {
              "type": "boolean",
              "default": true
            }
          }
        },
        "navbar": {
          "$ref": "#/definitions/NavbarConfig"
        },
        "footer": {
          "$ref": "#/definitions/FooterConfig"
        },
        "prism": {
          "type": "object",
          "properties": {
            "theme": { "type": "object" },
            "darkTheme": { "type": "object" },
            "additionalLanguages": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Languages: python, bash, yaml, cpp, cmake, xml"
            }
          }
        }
      }
    },
    "NavbarConfig": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "logo": {
          "type": "object",
          "properties": {
            "alt": { "type": "string" },
            "src": { "type": "string" }
          }
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "position": { "type": "string", "enum": ["left", "right"] },
              "label": { "type": "string" },
              "to": { "type": "string" },
              "docId": { "type": "string" },
              "sidebarId": { "type": "string" }
            }
          }
        }
      }
    },
    "FooterConfig": {
      "type": "object",
      "properties": {
        "style": {
          "type": "string",
          "enum": ["dark", "light"]
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "label": { "type": "string" },
                    "to": { "type": "string" },
                    "href": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "copyright": { "type": "string" }
      }
    }
  }
}
